<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="1dp"
    cardview:cardPreventCornerOverlap="false"
    cardview:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/LnrBaslik"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.76"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:textColor="@color/colorSiyah"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/kaynak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingLeft="10dp"
                android:paddingTop="0dp"
                android:textSize="11dp"
                android:textStyle="italic"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/RlvDigerKaynaklar">
                <TextView
                    android:id="@+id/digerKaynak"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="6dp"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:textColorHighlight="@color/colorSiyah"
                    android:textColor="@color/colorSiyah"
                    android:layout_alignParentBottom="true"
                    />
                <ImageView
                    android:id="@+id/rightArrow"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:paddingStart="2dp"
                    android:layout_alignRight="@id/digerKaynak"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:layout_alignParentBottom="true"
                    android:paddingBottom="5.6dp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LnrResim"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.24">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_launcher" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sonerguven.toptrends.toptrends.Activities.ShowNewsActivity">
    <ProgressBar android:id="@+id/progress_bar_news"
        style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginTop="0dp"
        android:indeterminate="false">
    </ProgressBar>
    <WebView  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/webView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
